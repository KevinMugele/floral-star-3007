<h1> <%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_of_experience %></p>
<br>

<h4>Rides Being Worked On:</h4>
<% @rides.each do |ride| %>
  <p>Name: <%= ride.name %><br></p>
  <p>Thrill Rating: <%= ride.thrill_rating %></p><br>
<% end %>
<br>

<h4>Add a ride to workload: </h4>

<%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, local: true do |f| %>
  <%= f.label :search, "Ride ID:" %>
  <%= f.text_field :search %>
  <%= f.submit "Submit" %>
<% end %>
